<%= render WilliamStorckPhxWeb.SharedView, "navbar_min.html", assigns %>

<div
  class="container-fluid mx-auto text-center"
  style="padding-top: 100px;"
>
  <div
    class="col-sm-12 col-md-8 col-lg-6 col-xl-5 flex-column mx-auto py-5"
  >
    <%= if assigns[:error_message] do %>
      <div
        class="alert alert-danger"
        role="alert"
      >
        <%= assigns[:error_message] %>
      </div>
    <% end %>

    <%= if assigns[:success] do %>
      <%= render WilliamStorckPhxWeb.ContactView, "_thank_you.html", assigns %>
    <% else %>
      <h2 class="display-text text-secondary my-1">
        We'd love to hear from you.
      </h2>

      <%= render WilliamStorckPhxWeb.ContactView, "_capture_form.html", assigns %>
    <% end %>
  </div>
</div>

<%= render WilliamStorckPhxWeb.SharedView, "footer.html", assigns %>
