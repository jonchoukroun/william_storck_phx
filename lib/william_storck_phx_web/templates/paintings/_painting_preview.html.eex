<%= if assigns[:painting].height do %>
  <div class="painting-grid-item align-self-center"
       style="<%= compute_style(assigns[:painting]) %>">
    <a href="<%= paintings_path(@conn, :show, assigns[:painting].id) %>" class="grid-image">
      <img src="<%= assigns[:painting].src %>" alt="<%= assigns[:painting].name %>" class="img-fluid">
    </a>
  </div>
<% end %>
